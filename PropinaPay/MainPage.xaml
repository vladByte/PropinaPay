<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PropinaPay.MainPage"
             BackgroundColor="#323232">

    <ContentPage.Resources>
        <Color x:Key="SectionsColor">#444</Color>
        <Color x:Key="LightFont">#d6d6d6</Color>
        <Color x:Key="DarkFont">#4fd8eb</Color>
    </ContentPage.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height=".3*"></RowDefinition>
            <RowDefinition Height=".7*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Padding="20"
                BackgroundColor="{StaticResource SectionsColor}"
                Stroke="Transparent" />
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="1"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height=".1*"></RowDefinition>
                <RowDefinition Height=".9*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                   FontAttributes="Bold"
                   Padding="3"
                   HorizontalTextAlignment="Center"
                   Text="TOTAL  P / PERSON"
                   TextColor="{StaticResource DarkFont}" />
            <Label Grid.Column="0" x:Name="LblTotal" Grid.Row="1"
                   FontAttributes="Bold"
                   FontSize="35"
                   HorizontalTextAlignment="Center"
                   Text="0.00$"
                   TextColor="{StaticResource LightFont}"
                   VerticalOptions="Center" />
            <BoxView
                Grid.Row="1"
                Grid.Column="1"
                Color="#adadad"
                Margin="0,10,0,0"
                VerticalOptions="Fill"
                HorizontalOptions="Fill" />
            <VerticalStackLayout
                Grid.Row="1"
                Grid.Column="2" 
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Label Text="SUBTOTAL"
                       TextColor="{StaticResource LightFont}"
                       FontAttributes="Bold"/>
                <Label x:Name="LblSubTotal"
                       Text="0.00$"
                       TextColor="{StaticResource LightFont}"
                       Padding="2"/>
                <Label Text="TIP"
                       TextColor="{StaticResource LightFont}"
                       FontAttributes="Bold"/>
                <Label x:Name="LblTipByPerson" 
                       Text="0.00$"
                       TextColor="{StaticResource LightFont}"
                       Padding="2"/>
            </VerticalStackLayout>

        </Grid> <!--/ Row 0 -->

        <Grid Grid.Row="1" 
              Margin="0,15,0,0">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".3*"></ColumnDefinition>
                <ColumnDefinition Width=".7*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition> </RowDefinition>
                <RowDefinition> </RowDefinition>
                <RowDefinition> </RowDefinition>
                <RowDefinition> </RowDefinition>
                
            </Grid.RowDefinitions>
            
            <Label Text="Enter your bill: $0.00"
                   TextColor="{StaticResource LightFont}"
                   BackgroundColor="CornflowerBlue"
                   />
            <Entry x:Name="TxtBill" 
                   Grid.Column="1"
                   BackgroundColor="{StaticResource SectionsColor}"
                   Keyboard="Numeric"
                   Text="0.00"
                   TextColor="{StaticResource LightFont}"
                   VerticalOptions="Center"/>
            <Label Text="Choose your Tip" 
                   BackgroundColor="CornflowerBlue"/>
            <Label Text="Tip 0%" 
                   BackgroundColor="CornflowerBlue"/>
            <Label Text="Split the total" 
                   BackgroundColor="CornflowerBlue"/>
          
        </Grid>
        
    </Grid> <!--/ Main Grid -->
</ContentPage>